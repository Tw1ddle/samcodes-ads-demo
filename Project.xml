<?xml version="1.0" encoding="utf-8"?>
<project>
	<!------------------------------APPLICATION SETTINGS---------------------------->
	
	<meta title="HaxeAdsDemo" package="uk.co.samcodes.haxeadsdemo" version="1.1.4" company="Sam Twidale" />
	<app file="HaxeAdsDemo" main="Main" />
	
	<!-- This demo supports testing use of one ad network at a time. Specify the one to use here! -->
	<!-- <set name="chartboostads" if="android" /> -->
	<!-- <set name="chartboostads" if="ios" /> -->
	<!-- <set name="admobads" if="android" /> -->
	<!-- <set name="admobads" if="ios" /> -->
	
	<!--------------------------------WINDOW SETTINGS------------------------------->
	
	<!--These window settings apply to all targets-->
	<window width="800" height="500" fps="60" background="#000000" hardware="true" vsync="true" />
	
	<!--Web-specific-->
	<window if="web"		orientation="landscape"  />
	
	<!--Desktop-specific-->
	<window if="desktop"	orientation="landscape" fullscreen="false" resizable="true" />
	
	<!--Mobile-specific-->
	<window if="mobile"		orientation="landscape" fullscreen="true" width="0" height="0" />
	
	<!--------------------------------PATHS SETTINGS-------------------------------->
	
	<set name="BUILD_DIR" value="export" />
	<classpath name="source" />
	
	<!--------------------------------LIBRARIES------------------------------------->
	
	<haxelib name="flixel" />
	
	<!-- Set Android SDK version to the minimum required by AdMob/Chartboost -->
	<android minimum-sdk-version="16" target-sdk-version="28" />
	
	<section if="chartboostads">
		<setenv name="CHARTBOOSTADS" />
		<haxedef name="chartboostads" />
		
		<!-- Set the play services versions that Chartboost depends on. These default to the latest installed -->
		<!-- Note that higher versions seem to demand an AdMob App ID and crash, not sure why that happens -->
		<set name="playServicesBaseVersion" value="16.0.1" />
		<set name="playServicesAdsIdentifierVersion" value="16.0.0" />
		<set name="androidSupportLibraryV4Version" value="23.+" />
		
		<!-- Change this line to the version of the Chartboost haxelib you want to build against! -->
		<include path="lib/samcodes-chartboost/include.xml" />
		<!-- <haxelib name="samcodes-chartboost" /> -->
	</section>
	
	<section if="admobads">
		<setenv name="ADMOBADS" />
		<haxedef name="admobads" />
		
		<!-- Change this line to the version of the AdMob module you want to build against! -->
		<include path="lib/samcodes-admob/include.xml" />
		<!-- <haxelib name="samcodes-admob" /> -->
		
		<!-- Set this if you want to use test ads on a particular device -->
		<!-- Your test id will appear in logcat. Refer to AdMob documentation -->
		<setenv name="AdmobTestDeviceId" value="YOUR_HASHED_TEST_DEVICE_ID" />
	</section>
	
	<!---------------------------------HAXEDEFINES---------------------------------->
	
	<!--Enable this for nape release builds for a serious peformance improvement-->
	<!--<haxedef name="NAPE_RELEASE_BUILD" />-->
	
	<!--Enable the flixel core recording system-->
	<!--<haxedef name="FLX_RECORD" />-->
	
	<!--Disable the right and middle mouse buttons-->
	<!--<haxedef name="FLX_NO_MOUSE_ADVANCED" />-->
	
	<!--Disable the Native cursor api for Flash target-->
	<!-- <haxedef name="FLX_NO_NATIVE_CURSOR" /> -->
	
	<!--Optimise inputs, be careful you will get null errors if you don't use conditionals in your game-->
	<haxedef name="FLX_NO_MOUSE"  if="mobile" />
	<haxedef name="FLX_NO_KEYBOARD" if="mobile" />
	<haxedef name="FLX_NO_GAMEPAD" />
	
	<!--Disable the Flixel core sound tray-->
	<!--<haxedef name="FLX_NO_SOUND_TRAY" />-->
	
	<!--Disable the Flixel sound management code-->
	<!--<haxedef name="FLX_NO_SOUND_SYSTEM" />-->
	
	<!--Disable the Flixel core focus lost screen-->
	<haxedef name="FLX_NO_FOCUS_LOST_SCREEN" />
	
	<!--Disable the Flixel core debugger. Automatically gets set whenever you compile in release mode!-->
	<haxedef name="FLX_NO_DEBUG" unless="debug" />
	
	<haxedef name="Dfdb" if="flash"/>
	
	<!---------------------------------CUSTOM---------------------------------->
	
	<!--The swf version should be at least 11.2 without FLX_NO_MOUSE_ADVANCED -->
	<set name="SWF_VERSION" value="11.2" />
	
	<icon path="icon.svg" />
</project>